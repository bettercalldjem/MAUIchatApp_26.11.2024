<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ChatApp.MainPage">

    <StackLayout Padding="20">
        <Label Text="Введите ваше имя" FontSize="24" HorizontalOptions="Center"/>
        <Entry x:Name="UsernameEntry" Placeholder="Имя" />

        <Label Text="Выберите аватар" FontSize="24" HorizontalOptions="Center"/>
        <Image x:Name="AvatarImage" Source="avatar_placeholder.png" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center"/>

        <Button Text="Перейти в чат" Clicked="OnEnterChatClicked"/>
    </StackLayout>
</ContentPage>
